#!/bin/bash

docker network create rbchallenge \

docker container run \
  --rm \
  --name postgres \
  -d \
  -e POSTGRES_USER=rebase \
  -e POSTGRES_PASSWORD=rebase \
  --network rbchallenge \
  postgres:14.4 \

docker container run \
  --rm \
  --name redis \
  -d \
  --network rbchallenge \
  redis:7.0.3 \

docker container run \
  --name sidekiq \
  --rm \
  -d \
  -v $(pwd):/app \
  -v gems:/usr/local/bundle \
  -w /app \
  --network rbchallenge \
  ruby:3.1.2 \
  bash -c "bundle install && sidekiq -r './worker/worker.rb' " \

docker container run \
  --name sidekiq-panel \
  --rm \
  -d \
  -v $(pwd):/app \
  -v gems:/usr/local/bundle \
  -w /app \
  --network rbchallenge \
  -p 5000:5000 \
  ruby:3.1.2 \
  bash -c "bundle install && bundle exec rackup -p 5000 -o 0.0.0.0 " \

docker container run \
  -ti\
  --rm \
  --name app \
  --network rbchallenge \
  -w /app \
  -v $(pwd):/app \
  -v gems:/usr/local/bundle \
  -p 3000:3000 \
  ruby:3.1.2 \
  bash -c "bundle install && rake db:drop && rake db:create && rake db:migrate && rake db:test:prepare && ruby './lib/server.rb' " \